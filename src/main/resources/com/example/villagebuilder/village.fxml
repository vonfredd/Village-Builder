<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<BorderPane maxHeight="768" maxWidth="1024" minHeight="768" minWidth="1024" prefHeight="768" prefWidth="1024"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.villagebuilder.VillageController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <top>
        <HBox prefHeight="80.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" prefHeight="150.0" prefWidth="339.0">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/lumber.png"/>
                        </ImageView>
                        <Label fx:id="lumberLabel" text="LUMBER">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" layoutX="342.0" prefHeight="150.0" prefWidth="339.0">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/bricks.png"/>
                        </ImageView>
                        <Label fx:id="brickLabel" text="BRICK">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" layoutX="683.0" prefHeight="150.0" prefWidth="341.0">
                    <children>
                        <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/wheat.png"/>
                        </ImageView>
                        <Label fx:id="wheatLabel" text="WHEAT">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>
    </top>

    <center>
        <StackPane maxHeight="10.0" maxWidth="10.0" prefHeight="670.0" prefWidth="800.0" BorderPane.alignment="CENTER">

            <ImageView fitHeight="650.0" fitWidth="650.0">
                <Image url="@images/village.png"/>
            </ImageView>

            <Circle fx:id="siteOne" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="33.0" styleClass="buildSiteCircle" translateX="-112.0" translateY="-20.0"/>
            <ImageView fx:id="siteOneImage" visible="false">
                <!-- Set image properties here -->
            </ImageView>

            <Circle fx:id="siteTwo" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="33.0" styleClass="buildSiteCircle" translateX="-50.0" translateY="-100.0"/>
            <ImageView fx:id="siteTwoImage" visible="false">
                <!-- Set image properties here -->
            </ImageView>

            <Circle fx:id="siteThree" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="33.0" styleClass="buildSiteCircle" translateX="150.0" translateY="-113.0"/>
            <ImageView fx:id="siteThreeImage" visible="false">
                <fitWidth>50.0</fitWidth>
                <fitHeight>50.0</fitHeight>
                <preserveRatio>true</preserveRatio>
            </ImageView>

            <Circle fx:id="siteFour" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="33.0" styleClass="buildSiteCircle" translateX="150.0" translateY="90.0"/>
            <ImageView fx:id="siteFourImage" visible="false">
                <!-- Set image properties here -->
            </ImageView>

            <Circle fx:id="siteFive" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="35.0" styleClass="buildSiteCircle" translateX="20.0" translateY="95.0"/>
            <ImageView fx:id="siteFiveImage" visible="false">
                <!-- Set image properties here -->
            </ImageView>

            <Circle fx:id="siteSeven" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="33.0" styleClass="buildSiteCircle" translateX="150.0"/>
            <ImageView fx:id="siteSevenImage" visible="false">
                <!-- Set image properties here -->
            </ImageView>
            <Circle fx:id="siteSix" centerX="100.0" centerY="100.0" fill="#cdaf78" onMouseClicked="#constructionSite"
                    radius="34.0" styleClass="buildSiteCircle" translateX="-123.0" translateY="95.0"/>
            <ImageView fx:id="siteSixImage" visible="false">
                <!-- Set image properties here -->
            </ImageView>


        </StackPane>
    </center>
    <left>
        <Pane prefHeight="200.0" prefWidth="180.0" BorderPane.alignment="CENTER">
            <children>
                <GridPane hgap="5.0" layoutX="200.0" layoutY="7.0" prefHeight="300.0" prefWidth="240.0" vgap="5.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Pane style="-fx-background-color: lightGrey;">
                            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
                                <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true">
                                    <Image url="@images/farmHouse.png"/>
                                </ImageView>
                                <Label styleClass="buildingIconView" text="Farm">
                                    <font>
                                        <Font name="System Bold" size="19.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="farmLogsPrice" styleClass="buildingCost" text="Logs: 90"/>
                                <Label fx:id="farmFoodPrice" styleClass="buildingCost" text="Food: 20"/>
                                <Label fx:id="farmBrickPrice" styleClass="buildingCost" text="Brick: 20"/>
                            </VBox>
                        </Pane>
                        <VBox prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1"/>
                        <HBox prefHeight="100.0" prefWidth="200.0"/>
                    </children>
                </GridPane>
            </children>
        </Pane>
    </left>
    <right>
        <Pane prefHeight="200.0" prefWidth="180.0" BorderPane.alignment="CENTER"/>
    </right>
    <bottom>
        <Pane prefHeight="38.0" prefWidth="200.0" BorderPane.alignment="CENTER"/>
    </bottom>

</BorderPane>
